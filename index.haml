\---
layout: main
\---

.posts
  {% for post in site.posts %}
  {% unless post.featured %}
  .post.row
    %a{href: "{{ post.url }}"}
      %img{ src: '{{ post.image }}', alt: "{{ post.title }}" }
    .summary.ninecol.right
      %h2 {{ post.title }}
      %p {{ post.summary }}
  {% endunless %}
  {% endfor %}
