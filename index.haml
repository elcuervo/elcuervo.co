\---
layout: default
\---

.posts
  {% for post in site.posts %}
  .post.sixcol.last
    /%span {{ post.date | date_to_string }}
    %a{href: "{{ post.url }}"}
      %img{ src: '/images/posts/{{post.url | replace: "/","" | replace: ".html",""}}/thumb.png', alt: "{{ post.title }}" }
      .title.twelvecol {{ post.title }}
    /%a{href: "{{ post.url }}"} {{ post.title }}
  {% endfor %}
